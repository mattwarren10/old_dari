<h1>Dari Words</h1>

<h3><%= link_to("Add Word", new_word_path) %></h3>


<table class="list" summary="Word List">
	<tr>
		<th>ID</th>
		<th>English Word</th>
		<th>Part of Speech</th>
		<th>Transliteration</th>
		<th>Translation</th>
		<th>Pronunciation</th>
		<th>Image</th>
		<th>Modify</th>
	</tr>
	<% @words.each do |word| %>
		<tr>
			<td><%= word.id %></td>
			<td><%= link_to(word.english_word, word_path(word.id)) %></td>
			<td><%= word.part_of_speech %></td>
			<td><%= word.transliteration %></td>
			<td><%= word.translation %></td>
			<td><%= audio_tag "#{word.english_word}.m4a", controls: true %></td>
			<td><%= image_tag	"#{word.english_word}.jpg" %></td>
			<td><%= link_to("Edit", edit_word_path(word), :class => 'back-link') %></td>
		</tr>
	<% end %>
</table>